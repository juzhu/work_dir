<style type="text/css">
  *{
    margin:0px;
    padding:0px;
  }
  body, button, input, select, textarea {
    font: 12px/16px Verdana, Helvetica, Arial, sans-serif;
  }
  .order_status {
    width:20px;
  }
  body {
    scroll-behavior: smooth;
  }
  p{
    width:603px;
    padding-top:3px;
    margin-top:10px;
    overflow:hidden;
  }
  input#address{
    width:150px;
  }
  #container_right {
    min-width:100%;
    min-height:767px;
  }
  #order_list {
    min-width:18%;
    max-width:20%;
    margin-top:30px;
    min-height:767px;
    float:left;
  }
  #container_op_right {
    position:fixed;
    top:50px;
    height:30px;
    left:22%;
    min-width:67%;
    float:left;
    margin-left :5px;
    margin-top :auto;
    margin-bottom :auto;
    display:none;

  }
  #container_op_right_float_right {
    display:inline-block;
    float:right;
  }

  #container {
    position:fixed;
    top:80px;
    bottom:10px;
    left:22%;
    min-width:100%;
    float:left;
    margin-left :5px;
    margin-top :auto;
    margin-bottom :auto;
  }
  #map_container {
    min-width:76%;
    min-height:100%;
    float:left;
    margin-left :5px;
  }
  .order_filter_div{
    position:fixed;
    background:#f5f5f5;
    top:45px;
    margin-top :5px;
    width:30%;
  }
</style>
</style>
<script charset="utf-8" src="http://map.qq.com/api/js?v=2.exp&libraries=geometry"></script>
<script charset="utf-8" src="/js/geo.js"></script>
<script>
  $(document).ready(function() {
    var center = new qq.maps.LatLng({{store_lat}}, {{store_lng}});
    init(center);
    initRegion(center);
    checkOrderProgress();
    setTimeout(function() {
      $("#main-menu-toggle").click();
      $("#container_op_right").show();
      }, 500);
      $(".check_op").live('click', function() {
        var checked = ($(this).attr("checked") == "checked");
        var orderID = $(this).attr("orderID");
        var marker = markerInfo[orderID];
        if (checked) {
          marker.setIcon(selectIcon);
          } else {
          marker.setIcon(normalIcon);
        }
        });
        filterStatus(1);
      })
    </script>
    <div id="container_right">
      <div class='order_filter_div'>
        <div class='order_filter_div_1' style='display:inline-block'>
          <span>批量</span>
          <select class="select_post" style="width:100px">
            {{#each users}}
            <option value='{{user_name}}'>{{user_name}}</option>
            {{/each}}
          </select>
          <button id='btn_post_batch' onclick="setOrderPostBatch()" style='height:20px;margin-left:5px;margin-bottom:5px'>选中送出</button>
          <button id='btn_recycle_batch' style='display:none' onclick="setOrderRecycleBatch('{{order_id}}')" style='height:20px;margin-left:5px;margin-bottom:5px'>选中回收</button>
        </div>
        <div style='display:inline-block'>
          <button id='filter_meituan' onclick="filterPlatform('meituan')" style='height:20px;margin-left:5px;margin-bottom:5px'>美团</button>
          <button id='filter_meituan' onclick="filterPlatform('eleme')" style='height:20px;margin-left:5px;margin-bottom:5px'>饿了么</button>
          <button id='filter_meituan' onclick="filterPlatform('baidu')" style='height:20px;margin-left:5px;margin-bottom:5px'>百度</button>
          <button id='filter_meituan' onclick="filterPlatform('all')" style='height:20px;margin-left:5px;margin-bottom:5px'>所有</button>
        </div>
      </div>
      <div>
        <div id="order_list">
          <div class="box-content">
            <table class="table table-bordered table-striped table-condensed">
              <thead>
                <tr>
                  <th>选择</th>
                  <th>时间</th>
                  <th>平台</th>
                  <th>地址</th>
                  <th>状态</th>
                  <th>待出菜</th>
                </tr>
              </thead>
              <tbody>
                {{#each items}}
                <tr class='data_tr' orderID='{{order_id}}' platform='{{order_platform}}' split_index={{split_index}} style="display:none" ondblclick="activeMarker('{{order_id}}')" orderStatus='{{current_status}}'>
                  <td class="center" style="width:2%"><input class='check_op' orderID='{{order_id}}' type="checkbox"/></td>
                  <td class="center" style='width:30px'>{{order_past_minute}}分</td>
                  <td class="center orderIndex" style='width:5%'>{{platform}}({{order_index}}){{#if is_transfer}}(转){{/if}}</td>
                  <td class="center addr" style="width:60px" lat={{lat}} lng={{lng}}>{{addr}}</td>
                  {{#if_eq  current_status 1 }}
                  <td class="center order_status" style="color: red">待配送</td>
                  {{/if_eq}}
                  {{#if_eq current_status  2}}
                  <td class="center order_status" style="color: red">配送中({{post_user_name}})</td>
                  {{/if_eq}}
                  {{#if_eq current_status 3}}
                  <td class="center order_status" style="color: #0076a3">待回收</td>
                  {{/if_eq}}
                  {{#if_eq current_status 4}}
                  <td class="center order_status" style="color: #0076a3">回收中({{recycle_user_name}})</td>
                  {{/if_eq}}
                  {{#if_eq current_status 5}}
                  <td class="center order_status" style="color: green" >待验收</td>
                  {{/if_eq}}
                  {{#if_eq current_status 6}}
                  <td class="center order_status" style="color: green" >无需回收</td>
                  {{/if_eq}}
                  {{#if_eq current_status 7}}
                  <td class="center order_status" style="color: green" >验收通过</td>
                  {{/if_eq}}
                  {{#if_eq current_status 8}}
                  <td class="center order_statusr" style="color: green" >送达</td>
                  {{/if_eq}}
                  <td class="center" id="{{order_id}}_waiting_dishes" style="color: green;width:150px" ></td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
          <br>
          <br>
          <br>
        </div>
        <div id="container_op_right">
          <button onclick="filterStatus(1)">待配送</button>
          <button onclick="filterStatus(2)">配送中</button>
          <button onclick="filterStatus(3)">待回收</button>
          <button onclick="filterStatus(4)">回收中</button>
          <button onclick="filterStatus(-1)">所有</button>
          <button onclick="resetMapCenter()">大本营</button>
          <button onclick="toggleLabel(this)" show_label='true' >地图标签</button>
          <button onclick="toggleRegion()">分区</button>
          <button onclick="updatePosterInfo()">配送</button>
          <div id='container_op_right_float_right'>
            <input id="address" type="textbox" value="广东深圳">
            <button onclick="codeAddress()">search</button>
          </div>
        </div>
        <div id="container">
          <div id="map_container"></div>
        </div>
      </div>
    </div>
