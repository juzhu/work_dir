    <script type='text/javascript'>
      var user_order_menu = {};
$(".add-food").click(function() {
  var num = parseInt($(this).prev().text());
  num = num + 1;
  $(this).prev().text(num)
  $(this).prev().show();
  $(this).prev().prev().show();
  });

$(".sub-food").click(function() {
  var num = parseInt($(this).next().text());
  num = num - 1;
  if (num <= 0) {
  $(this).hide();
  $(this).next().hide();
  num = 0;
  }
  $(this).next().text(num)
  });
</script>
